{
    "variables":{
	     "vault_path": "vault_pass_file",
	      "name": "{{env `NAME`}}"
    },
    "builders": [{
        "type": "amazon-ebs",
        "region": "us-east-1",
        "source_ami": "ami-0de53d8956e8dcf80",
        "instance_type": "t3.micro",
        "ssh_username": "ec2-user",
        "ssh_timeout": "5m",
        "ami_name": "{{user `name`}}_{{ timestamp }}",
        "tags": {
          "Name": "{{user `ami_name`}}"
        },
        "snapshot_tags": {
          "Name": "{{user `ami_name`}}"
        }
    }],
    "provisioners": [{
        "type" : "shell",
        "inline" : "sudo yum -y update"
      },
      {
        "type" : "shell",
        "inline" : "pwd && ls -l"
      },
      {
        "type" : "shell",
        "inline" : "sudo mkdir -p /var/www/test && sudo chown ec2-user:ec2-user /var/www/test"
      },
      {
        "type" : "file",
        "source" : "buildspec.yml",
        "destination" : "/var/www/test/"
      },
      {
        "type" : "file",
        "source" : "ansible",
        "destination" : "/var/www/test/"
      },
      {
        "type" : "shell",
        "inline" : "sudo ls -Ral /var/www/hypatx"
      },
      {
        "type" : "ansible",
	      "extra_arguments": "--vault-id={{user `vault_path`}}",
        "playbook_file" : "ansible/site.yml"
    }]
}
